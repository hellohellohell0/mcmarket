generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model removed. Admin is handled via hardcoded credentials.

enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
}

model Listing {
  id                String        @id @default(uuid())
  
  // Account Details
  username          String
  description       String
  accountTypes      String        @default("OG") // Stored as comma-separated string or JSON. Simple string for now: "OG,High Tier"
  nameChanges       Int           @default(0) // 0-15 (15 means 15+)
  
  // Pricing
  currency          String        @default("USD")
  priceCurrentOffer Float?
  priceBin          Float?
  
  // Visuals
  capes             Cape[]
  
  // Seller Info (Guest)
  sellerName        String        @default("Legacy User")
  sellerDiscordId   String        @default("N/A") // For admin notifications
  publicContact     String        @default("Contact Admin") // Displayed to buyers (Discord, Telegram, etc.)
  contactTelegram   String?
  contactDiscord    String?
  
  // Presence & Ownership
  currentOwnerName  String        @default("Verified Owner")
  isVerifiedOwner   Boolean       @default(false)
  identityVerified  Boolean       @default(false)
  oguProfileUrl     String?

  // System
  status            ListingStatus @default(APPROVED)
  ticketNumber      String?
  createdAt         DateTime      @default(now())
}

model Cape {
  id        String  @id @default(uuid())
  name      String
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}
