generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model removed. Admin is handled via hardcoded credentials.

enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
}

model Listing {
  id                String        @id @default(uuid())
  
  // Account Details
  username          String
  description       String
  accountTypes      String        // Stored as comma-separated string or JSON. Simple string for now: "OG,High Tier"
  nameChanges       Int           // 0-15 (15 means 15+)
  
  // Pricing
  priceCurrentOffer Float?
  priceBin          Float?
  
  // Visuals
  skinUrl           String?
  capes             Cape[]
  
  // Seller Info (Guest)
  sellerName        String
  sellerDiscordId   String        // For admin notifications
  publicContact     String        // Displayed to buyers (Discord, Telegram, etc.)
  
  // System
  status            ListingStatus @default(PENDING)
  createdAt         DateTime      @default(now())
}

model Cape {
  id        String  @id @default(uuid())
  name      String
  listingId String
  listing   Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}
